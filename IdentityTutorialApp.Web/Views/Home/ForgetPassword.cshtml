@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırlama Adımları";
}



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-4 offset-md-4">

        <h3>Şifre Sıfırlama Adımları</h3>
        <hr />
        <div class="alert alert-info" role="alert">Şifrenizi Sıfırlama linki belirteceğiniz email adresine gönderilecektir.</div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert"> @TempData["SuccessMessage"]</div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <form asp-controller="Home" asp-action="ForgetPassword" method="post">
            <div class="mb-3">
                <label asp-for="Email" for="exampleInputEmail1" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>
