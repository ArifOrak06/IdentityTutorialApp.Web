@model UserEditViewModel


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">

    <div class="col-md-6 offset-md-2">

        <h3>Kullanıcı Bilgileri Güncelleme Formu</h3>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert"> @TempData["SuccessMessage"]</div>
        }

        <div class="alert alert-danger" asp-validation-summary="ModelOnly" role="alert"></div>
        <form asp-controller="Members" asp-action="UpdateUser" method="post" enctype="multipart/form-data">



            <div class="mb-3">
                <label asp-for="UserName" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="UserName" type="text" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="Phone" type="text" class="form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirthDate" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control">
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="City" for="exampleInputPassword1" class="form-label"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <select class="form-control" asp-for="Gender" asp-items="@ViewBag.genderList">
                        <option value="">Cinsiyet Seçiniz.</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Picture" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input type="file" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">

                    <button type="submit" class="btn btn-primary">Gönder</button>

                </div>
            </div>

        </form>
    </div>

</div>
