@{
    ViewData["Title"] = "Hesap Bilgileri";
}

@model UiUserViewModel


<h3>Hoşgeldin @User.Identity!.Name</h3>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <user-picture-thumbnail style="width:200px;height:200px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>
</div>
<div class="row">

    <div class="col-md-8">
        <div class="col-md-4">
            <a class="btn btn-sm btn-outline-warning" asp-controller="Members" asp-action="UpdateUser">Profil Bilgileri Güncelle</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Telefon Numarası</th>
                    <th>Email Adresi</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.PhoneNumber</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
