@{
    ViewData["Title"] = "Kullanıcıya Role Atama";
}
@model List<AssignRoleToAppUserViewModel>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h3>Role Atama Formu</h3>
        <hr />
        <form asp-action="AssignRoleToAppUser" asp-route-userId="@ViewBag.UserId" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }

            <div class="mt-2">
                <button type="submit" class="btn btn-sm btn-success">Role Ata</button>
            </div>
            <div class="mt-3">
                <a asp-controller="Home" asp-action="UserList" class="btn btn-sm btn-outline-primary">Kullanıcı Listesine Dön</a>
            </div>

        </form>

    </div>

</div>