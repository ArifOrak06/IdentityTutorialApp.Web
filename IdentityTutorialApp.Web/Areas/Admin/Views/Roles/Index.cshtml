@{
    ViewData["Title"] = "Roller";
}
@model List<RoleViewModel>


<h3>Aktif Roller</h3>
@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
}

<div class="row">


    <div class="col-md-8">
        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="RoleCreate">Role Ekle</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning" asp-action="RoleUpdate" asp-route-roleId="@item.Id">Düzenle</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="RoleDelete" asp-route-roleId="@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>